    "node-fetch": "^2.6.0",
    "npm-path": "^2.0.4"
  },
  "devDependencies": {
    "@types/node": "^13.1.8",
    "@types/node-fetch": "^2.5.4",
    "husky": "^4.0.10",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
